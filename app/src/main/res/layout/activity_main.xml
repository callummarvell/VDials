<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/left_bank"
        android:src="@drawable/icon_maneuver_bank_left"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/left_bank"
        android:src="@drawable/icon_maneuver_bank_left_blue"
        android:tint="@color/maneuverBlue"
        android:tintMode="multiply"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/left_bank"
        android:src="@drawable/icon_maneuver_bank_left_red"/>

    <include layout="@layout/fragment_dial"/>
</LinearLayout>